// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String
  password      String
  age           Int
  latitude      Float
  longitude     Float
  distanceLimit Int
  Pet           Pet[]

  @@map("user")
}

enum Gender {
  MALE
  FEMALE
}

model Pet {
  id          String  @id @default(uuid())
  name        String
  gender      Gender
  breed       String
  age         Int
  vaccination Boolean @default(false)
  user        User    @relation(fields: [userId], references: [id])
  userId      String

  @@map("pet")
}
